# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:password@postgres:5432/whatsapp_microservice?schema=public"

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# WhatsApp Cloud API (v21.0 - latest as of 2025)
WHATSAPP_API_VERSION=v21.0
WHATSAPP_API_BASE_URL=https://graph.facebook.com

# Meta App Credentials (for Embedded Signup)
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# Webhook Verification (set this in Meta App Dashboard)
WEBHOOK_VERIFY_TOKEN=your_secret_verify_token_here

# OAuth Redirect URI (must match Meta App Dashboard)
OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/whatsapp/callback

# BullMQ Configuration
BULLMQ_DEFAULT_JOB_ATTEMPTS=3
BULLMQ_DEFAULT_JOB_TIMEOUT=60000

# Rate Limiting
DEFAULT_RATE_LIMIT_PER_MINUTE=50

# Conversation Auto-Close (in hours)
CONVERSATION_AUTO_CLOSE_HOURS=24

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# API Key for authentication
API_KEY=your_secret_api_key_here_change_in_production
